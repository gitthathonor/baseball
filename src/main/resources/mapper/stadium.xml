<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.baseball.domain.stadium.StadiumDao">

	<insert id="insert">
		INSERT INTO stadium(name, createdAt) VALUES(#{name}, now())
	</insert>

	<select id="findAll"
		resultType="site.metacoding.baseball.domain.stadium.Stadium">
		SELECT * FROM stadium
	</select>

	<select id="findById"
		resultType="site.metacoding.baseball.domain.stadium.Stadium">
		SELECT * FROM stadium WHERE id = #{id}
	</select>

	<delete id="deleteById">
		DELETE FROM stadium WHERE id = #{id}
	</delete>
	
	
</mapper>